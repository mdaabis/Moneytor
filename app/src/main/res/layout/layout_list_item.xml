<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="395dp"
    android:layout_marginLeft="8.5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_recycler_view"
    android:padding="20dp"
    android:id="@+id/parent_layout">


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="testDate"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:id="@+id/dateLLI"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionLLI"
        android:textColor="@color/title"
        android:tooltipText=""
        android:textAlignment="center"
        android:layout_toRightOf="@id/dateLLI"
        android:layout_marginLeft="35dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="testDescription"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/categoryLLI"
        android:textColor="@color/title"
        android:text="Entertainment"
        android:textAlignment="center"
        android:layout_toRightOf="@id/descriptionLLI"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/title"
        android:layout_below="@id/categoryLLI"
        android:text="testAmount"
        android:id="@+id/amountLLI"
        android:textAlignment="center"
        android:layout_marginTop="37dp"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/title"
        android:text="testNotes"
        android:layout_toRightOf="@id/amountLLI"
        android:layout_marginTop="37dp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/notesLLI"
        android:layout_below="@id/descriptionLLI"/>
</RelativeLayout>