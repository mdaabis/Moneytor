<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:backgroundTint="@color/background_blue"
    android:backgroundTintMode="screen"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="337dp"
        android:layout_height="375dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="115dp"
        android:background="@color/white"
        android:src="@drawable/rectangle"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-460dp"
        android:alpha="0.75"
        app:srcCompat="@drawable/compressed_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#00921212"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#197896"
        android:textColorLink="#E1D32B2B"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:ems="30"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="#48000000" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:alpha="0.6"
        android:ems="30"
        android:inputType="textPassword"
        android:text="Password"
        android:textAlignment="center"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="#03A9F4" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#656565"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>

