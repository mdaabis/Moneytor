<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:backgroundTint="@color/background_blue"
    android:backgroundTintMode="screen"
    tools:context=".RegisterPage" >

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="337dp"
        android:layout_height="630dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/rectangle"
        android:src="@drawable/rect" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-715dp"
        android:alpha="0.75"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/compressed_logo" />

    <TextView
        android:id="@+id/ETregister_title"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/login"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#00921212"
        android:text="@string/create_account"
        android:textAlignment="center"
        android:textColor="#197896"
        android:textColorLink="#E1D32B2B"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/ETusername"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/email"
        android:ems="30"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#48000000" />
    <EditText
        android:id="@+id/ETname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/first_name"
        android:ems="30"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#48000000" />
    <EditText
        android:id="@+id/ETsurname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/surname"
        android:ems="30"
        android:hint="@string/surname"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#48000000" />

    <EditText
        android:id="@+id/ETpassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:alpha="0.6"
        android:contentDescription="@string/password"
        android:ems="30"
        android:hint="@string/password"
        android:inputType="textVisiblePassword|textPassword"
        android:textAlignment="center"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/ETconfirm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:alpha="0.6"
        android:contentDescription="@string/confirm_password"
        android:ems="30"
        android:hint="@string/confirm_password"
        android:inputType="textVisiblePassword|textPassword"
        android:textAlignment="center"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/BTNregister"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="@string/login_button"
        android:text="@string/register_txt"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TVno_account"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-71dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/no_account"
        android:text="@string/have_account"
        android:textColor="@color/link_blue" />

    <Button
        android:id="@+id/BTNlogin_button"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button"
        android:contentDescription="@string/register_txt"
        android:text="@string/login_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>

